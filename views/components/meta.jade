meta(charset="utf-8")
meta(http-equiv="X-UA-Compatible", content="IE=edge")
meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
meta(name="apple-mobile-web-app-capable" content="yes")
meta(name="mobile-web-app-capable" content="yes")

meta(name='apple-mobile-web-app-title', content='The Pulse')
meta(name='application-name', content='The Pulse')
meta(name='theme-color', content='#ffffff')
link(href='https://fonts.googleapis.com/css?family=Neuton:400,700|Open+Sans+Condensed:700,300|Roboto+Mono:300i,700', rel='stylesheet', type='text/css')

link(rel='apple-touch-icon', sizes='180x180', href='/img/#{brandIcon}/apple-touch-icon.png')
link(rel='icon', type='image/png', sizes='32x32', href='/img/#{brandIcon}/favicon-32x32.png')
link(rel='icon', type='image/png', sizes='16x16', href='/img/#{brandIcon}/favicon-16x16.png')
link(rel='manifest', href='/manifest.#{brandIcon}.json')
link(rel='mask-icon', href='/safari-pinned-tab.svg', color='#e14e48')
link(rel='shortcut icon', href='/favicon-#{brandIcon}.ico')


meta(name='msapplication-config', content='/browserconfig.pulse.xml')


if metaTags
  if photoUrl
    meta(name='twitter:card', content='summary_large_image')
    meta(name='twitter:image', content='#{photoUrl}')
    meta(property='og:image', content='#{photoUrl}')
  else
    meta(name='twitter:card', content='summary')
  meta(name='twitter:title', content='#{title}')
  meta(name='twitter:description', content='#{description}')

  meta(property='og:title', content='#{title}')
  meta(property='og:url', content='#{currentUrl}')
  meta(property='og:description', content='#{description}')
